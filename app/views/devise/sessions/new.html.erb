<h2 class="mt-5 text-center text-light col-12 offset-0 col-md-8 offset-md-2 col-xl-6 offset-xl-3">Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mt-4 form-inputs col-12 offset-0 col-md-8 offset-md-2 col-xl-6 offset-xl-3">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="p-0 form-actions col-12 offset-0 col-md-8 offset-md-2 col-xl-6 offset-xl-3">
    <div class=" login btn btn-light"><%= f.button :submit, "Log in" %></div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
